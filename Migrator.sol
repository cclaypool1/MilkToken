contract Migrator is Context, Ownable {
    using SafeMath for uint256;
    using Address for address;

    IERC20 milk = IERC20(0xb7CEF49d89321e22dd3F51a212d58398Ad542640);
    IERC20 butter = IERC20(0x0110fF9e7E4028a5337F07841437B92d5bf53762);
    IERC20 milkandbutter;
    IERC20 wbnb = IERC20(0xbb4CdB9CBd36B01bD1cBaEBF2De08d9173bc095c);
    IERC20 busd = IERC20(0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56);

    address milkandbutterLP;
    address pancakeAddress = 0x1B96B92314C44b159149f7E0303511fB2Fc4774f;

    uint256 butterDivisor = 2;
    uint256 milkDivisor = 1000 * 2;

    bool public _migrationEnabled = false;

    function migrationEnabled() public view returns (bool)
    {
        return _migrationEnabled;
    }

    function Migrate(uint256 milkAmount, uint256 butterAmount) public
    {
        require(_migrationEnabled, "Migration is not currently enabled");

        if(milkAmount == 0 && butterAmount == 0) return;

        require(milk.balanceOf(msg.sender) >= milkAmount, "User does not have enough milk");
        require(butter.balanceOf(msg.sender) >= butterAmount, "User does not have enough butter");

        uint256 newTokenAmount = 0;

        if(milkAmount > 0)
        {
            //take the milk amount from the user and give them the amount of the new token determined by the divisior
            newTokenAmount += milkAmount.div(milkDivisor);
            milk.transferFrom(msg.sender, address(this), milkAmount);
        }

        if(butterAmount > 0)
        {
            newTokenAmount += butterAmount.div(butterDivisor);
            butter.transferFrom(msg.sender, address(this), butterAmount);
        }

        if(newTokenAmount == 0) return;


        milkandbutter.transfer(msg.sender, newTokenAmount);
    }

    function recoverERC20(address tokenAddress, uint256 tokenAmount) public onlyOwner {
        IERC20(tokenAddress).transfer(owner(), tokenAmount);
    }

    function setMigrationEnabled(bool toggle) public onlyOwner {
        _migrationEnabled = toggle;
    }

    function setLPAddress(address addy) public onlyOwner {
        milkandbutterLP = addy;
    }

    function setNewTokenAddress(address addy) public onlyOwner {
        milkandbutter = IERC20(addy);
    }

    function previewNewTokenAmount(address addy) public view returns (uint256)
    {
        uint256 newTokenAmount = 0;

        uint256 milkAmount = milk.balanceOf(addy);
        uint256 butterAmount = butter.balanceOf(addy);

        if(milkAmount > 0)
        {
            newTokenAmount += milkAmount.div(milkDivisor);
        }

        if(butterAmount > 0)
        {
            newTokenAmount += butterAmount.div(butterDivisor);
        }

        return newTokenAmount;
    }

    function getNewTokenPrice() public view returns (uint256)
    {
        //Returns 1 BUSD equivalent of BUTTER
        uint256 newTokenBNBAmount = wbnb.balanceOf(milkandbutterLP);
        uint256 newTokenAmount = milkandbutter.balanceOf(milkandbutterLP);
        
        //Find BNB price in BUSD
        uint256 bnbAmount = wbnb.balanceOf(pancakeAddress);
        uint256 busdAmount = busd.balanceOf(pancakeAddress);
        uint256 bnbPrice = busdAmount.div(bnbAmount);
        
        //Normalize decimals to BNB/BUSD decimals, find amount of Butter 1 BNB is worth
        newTokenAmount = newTokenAmount.mul(10**9);
        uint256 newTokenPerBNB = newTokenAmount.div(newTokenBNBAmount);
        
        //Find amount of Butter 1 BUSD is worth
        uint256 newTokenPerBUSD = newTokenPerBNB.div(bnbPrice);
        newTokenPerBUSD = newTokenPerBUSD.mul(10**9); //add back Butter decimals
        return newTokenPerBUSD;
    }

    function newTokenDollarValue(uint256 newTokenAmount) public view returns (uint256)
    {
        return newTokenAmount.div(getNewTokenPrice());
    }

    function newTokenAccountValue(address addy) public view returns (uint256)
    {
        return newTokenDollarValue(milkandbutter.balanceOf(addy));
    }

    constructor () {
        
    }

    
}
